
<head>
  <link rel="stylesheet" href="/styles/hero.css" type="text/css" />
</head>


<header class="hero">

      <% if (userObject && userObject.vendor) { %>

      <div class="vendor-hero-content">
        <div class="center">
          <h2>Hello <%= userObject.name %></h2>
          <div class="new-item-slider">
            <%- include('_post_item') %>
          </div>
        </div>
        
      </div>


      <% } else if (userObject) { %>

      <div class="user-name">
        <h2>Welcome back <%= userObject.name %></h2>
        <br>
      </div>


      <% } else { %>

      <div class="hero-content">
        <div class="hero-left">
          <h2>Thirsty for adventure?</h2>
          <p>
            Discover local breweries near you.
          </p>
          <p>
            Browse products, connect with the sellers and support your local brewers.
          </p>
          </p>
        </div>

        <div class="hero-right">
          <form method="get" action="/search" class="hero-form">
            <label class="cta-message" for="hero-input-city">Support a local brewery near you</label>
            <button type="submit" class="btn">Browse Beers</button>
          </form>
        </div>

      <% } %>



    </div>
  </div>

</header>

