<body>
  <% if (userObject) { %>
    <%-include('partials/_navbarSignedIn') %>
    <% } else { %>
    <%- include('partials/_navbar') %>
    <% } %>
  <h1>Product Information Page</h1>

  <% for (const item of items) { %>
    <div class="featured-items">
      <p class="prod-name"> <%= item.vendor %> </p>
      <p class="prod-name"> <%= item.name %> </p>
      <img class="product-image" src=<%= item.image %>
      <p> <%= item.category %> </p>
      <p><%= item.price %> </p>
      <button id="more-info">Tell Me More</button>

    </div>

  <% } %>


  <div class="send-message">

    CONTACT ME (vendor contact user)
    <form action="/profile" method="POST">
      Name:<br>
      <input type="text" name="name"><br><br>
      Message:<br>
      <textarea name="message" placeholder="Describe your item..."></textarea>
      <br><br>
      <button type="submit">Send Message</button>
    </form>

  </div>


