    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/_navbarSignedIn') %>

    <%- include('partials/_hero') %>
    

    <main class="all-products">
      <div class="products">

      <% for (const product of products) { %>
        <div class="featured-items">
          <h4>Featured Item</h4>
          <p class="prod-name"> <%= product.name %> </p>
          <img class="product-image" src=<%= product.image %>
          <p> <%= product.category %> </p>
          <p><%= product.price %> </p>
          <button id="more-info">Manage Item</button>
        </div>
      <% } %>

      </div>

    </main>


    <div class="email-vendor">
      CONTACT ME :)
      <form action="mailto:xiaowei.c.li.com"
        method="POST"
        enctype="multipart/form-data"
        name="EmailForm"
        >
        Name:<br>
        <input type="text" size="19″ name="ContactName"><br><br>
        Email:<br>
        <input type="text" size="19″ name="ContactEmail"><br><br>
        Message:<br>
        <textarea name="ContactCommentt" rows="6″ cols="20″></textarea>
        <br><br>
        <button type="submit">Send Email</button>

      </form>

    </div>

    <%- include('partials/_footer') %>

  </body>
</html>
