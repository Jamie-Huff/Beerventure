<body>
  <%- include('partials/_navbar') %>

  <div class ="search-bar">
  <form action="/search" method="POST" id="search-form" class="search-form">
    <div class="search-form-box">
      <label for="search-form-box">Lets see whats to drink in your city!</label>
      <input type="text" name="city" placeholder="City" id="search-city">
    </div>

    <div class="search-property-form__field-wrapper">
        <button type="submit">Search</button>
        <a id="search-property-form__cancel"href="#">Cancel</a>
    </div>
  </form>
</div>
<% for (const item of items) { %>
<div class="search-result">

  <div class="image">
    <picture>
      <img id="search-image" src="/images/budlight.jpg" alt="beer can">
  </picture>
</div>
<div class="info-container">
  <p><%= item.name %></p>
  <p><%= item.price %></p>
  <p><%= item.date_posted %></p>
  <p><%= item.category %> </p>
</div>

</div>
<% } %>

